<%= javascript_include_tag "map" %>
<div class="row full-height margin-left-0 margin-right-0">
  <div class="col-md-5 max-height-x padding-left-0 padding-right-0">
    <div class="map-info full-height">
      <div id="gmap_canvas" class="map-show full-height"></div>
    </div>
  </div>
  <div class="col-md-7 max-height-x padding-left-0 padding-right-0 scroll-y">
    <div class="venue-name"><span><%= @venue.name %></span></div>
    <div class="block full">
      <div class="block-title">
        <%= render "shared/form_outline", active_id: "venues" %>
      </div>
      <div class="row margin-left-0 margin-right-0">
        <div class="col-md-1"></div>
        <div class="col-md-10">
          <div class="tab-content">
            <div class="tab-pane active">
              <%= simple_form_for @venue, input_html: { id: "the-form" } do |f| %>
                <%= f.input :name, input_html: {class: "form-control margin-bot-15",
                  "data-validation": "required"} %>
                <%= f.input :description,
                  input_html: {class: "form-control margin-bot-15",
                  "data-validation": "required"} %>
                <%= f.simple_fields_for :address do |form_address| %>
                  <%= form_address.input :details,
                    input_html: {class: "form-control margin-bot-15",
                    id: "address", "data-validation": "required"} %>
                  <div class="row">
                    <div class="col-md-6">
                      <%= form_address.input :city,
                        input_html: {class: "form-control margin-bot-15"} %>
                    </div>
                    <div class="col-md-6">
                      <%= form_address.input :street_address,
                        input_html: {class: "form-control margin-bot-15"} %>
                    </div>
                  </div>
                  <%= f.input :phone_number,
                    input_html: {class: "form-control margin-bot-15",
                    "data-validation": "length",
                    "data-validation-length": "min10"} %>
                  <div class="row">
                    <div class="col-md-6">
                      <%= f.input :email,
                        input_html: {class: "form-control margin-bot-15",
                        "data-validation": "email",
                        "data-validation-help": I18n.t("help_info")} %>
                    </div>
                    <div class="col-md-6">
                      <%= f.input :website,
                        input_html: {class: "form-control margin-bot-15",
                        "data-validation": "url"} %>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-6">
                      <%= form_address.input :postal_code,
                        input_html: {class: "form-control margin-bot-15"} %>
                    </div>
                    <div class="col-md-6">
                      <%= form_address.input :unit,
                        input_html: {class: "form-control margin-bot-15"} %>
                    </div>
                  </div>
                <% end %>
                <div class="row">
                  <div class="col-md-6">
                    <%= f.input :introduction,
                      input_html: {class: "form-control margin-bot-15",
                      "data-validation": "required"} %>
                  </div>
                  <div class="col-md-6">
                    <%= f.input :slogan,
                      input_html: {class: "form-control margin-bot-15",
                      "data-validation": "required"} %>
                  </div>
                </div>
                <%= f.button :submit, class: "btn btn-primary pull-left" %>
              <% end %>
              <%= link_to edit_venue_venue_detail_path(@venue), class: "btn btn-primary pull-right" do %>
                <%= t "next" %> <i class="fa fa-chevron-right" aria-hidden="true"></i>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDhyJ3SWFP8U5Xmqe3H3X_iOsR1nw1v6_Q&&libraries=places"></script>
