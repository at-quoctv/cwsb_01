<table class="table table-striped table-users">
  <tr>
    <th><%= t "admin.users.user_id" %></th>
    <th><%= t "admin.users.name" %></th>
    <th><%= t "admin.users.email" %></th>
    <th><%= t "admin.users.active" %></th>
    <th><%= t "admin.users.role" %></th>
    <th><%= t "admin.users.block" %></th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.name %></td>
      <td><%= user.email %></td>
      <td>
        <label class="switch switch-primary">
          <%= check_box_tag :active, user.active, user.active, id: "acvite_user_#{user.id}" %>
          <span></span>
        </label>
      </td>
      <td><%= user.role %></td>
      <td></td>
    </tr>
  <% end %>
</table>
<div class="paginate_and_page_info">
  <%= paginate @users %>
  <%= page_entries_info @users %>
</div>
