<div class="row">
  <div class="col-md-8 col-md-offset-2 search_users">
    <%= search_form_for @query_users, url: admin_users_path do |f| %>
      <div class="input-group">
        <%= f.search_field :name_or_email_cont,
          placeholder: t("admin.users.search"), class: "form-control" %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
