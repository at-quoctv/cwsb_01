<div class="row">
  <div class="col-md-8 col-md-offset-2 search_venues">
    <%= search_form_for @query_venues, id: "search-form", url: admin_venues_path do |f| %>
      <div class="input-group">
        <%= f.search_field :address_details_or_name_or_email_cont,
          placeholder: t("admin.venues.search_venues"), class: "form-control" %>
        <div class="input-group-btn">
          <button class="btn btn-default" type="submit">
            <i class="glyphicon glyphicon-search"></i>
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>
