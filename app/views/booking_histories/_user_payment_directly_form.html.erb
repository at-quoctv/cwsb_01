<%= simple_form_for [order.venue, order, UserPaymentDirectly.new],
  method: :post do |f| %>
  <%= f.input :name,
    input_html: {value: current_user.name, class: "form-control margin-bot-10",
    "data-validation": "required"} %>
  <%= f.input :email,
    input_html: {value: current_user.email, class: "form-control margin-bot-15",
    "data-validation": "email",
    "data-validation-help": t("booking_histories.validation.email")} %>
  <%= f.input :phone,
    input_html: {value: current_user.phone_number, class: "form-control margin-bot-15",
    "data-validation": "length",
    "data-validation-length": "min10"} %>
  <%= f.input :address,
    input_html: {class: "form-control margin-bot-15",
      "data-validation": "length", "data-validation-length": "max20"} %>
  <%= f.button :submit, value: t("booking_histories.choose_payment.submit"),
    class: "btn btn-danger pull-right" %>
<% end %>
