<% if order.paid? %>
  <%= button_to t("booking_histories.index.paid"),
    payments_path(order: order.id),
    class: "btn btn-success", disabled: true %>
<% else %>
  <%= render "choose_payment", order: order %>
  <%= link_to t("booking_histories.index.payment"), "#",
    class: "btn btn-danger", data: {toggle: "modal", target: "#modal_payment_#{order.id}"} %>
<% end %>
