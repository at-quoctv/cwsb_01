<div class="panel-group online-support-form">
  <div class="panel panel-default">
    <div id="collapse1" class="panel-collapse collapse">
      <div class="panel-body user-support-list scroll-y" id="support-message"
        data-user-id="<%= current_user.id %>">
        <%= render partial: "supports/support", collection: @supports %>
      </div>
      <div class="panel-footer">
        <%= render "supports/new_support", support: @support %>
      </div>
    </div>
    <div class="panel-heading online-support-title">
      <h4 class="panel-title">
        <a data-toggle="collapse" href="#collapse1">
          <i class="online-support-button fa fa-comments-o" aria-hidden="true"></i>
        </a>
      </h4>
    </div>
  </div>
</div>
